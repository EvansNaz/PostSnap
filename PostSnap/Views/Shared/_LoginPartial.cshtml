@using Microsoft.AspNetCore.Identity
@using PostSnap.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-light hover-effect" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                <i class="bi bi-person-circle"></i> @User.Identity?.Name
            </a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Posts", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-light hover-effect">
                    <i class="bi bi-box-arrow-right"></i> Logout
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-light hover-effect" asp-area="Identity" asp-page="/Account/Register">
                <i class="bi bi-pencil-square"></i> Register
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-light hover-effect" asp-area="Identity" asp-page="/Account/Login">
                <i class="bi bi-lock"></i> Login
            </a>
        </li>
    }
</ul>
